events {}

http {
    # HTTP server to handle ACME challenge and redirect all traffic to HTTPS
    server {
        listen 80;
        server_name com619devops.uksouth.cloudapp.azure.com;

        # Location for the ACME challenge
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }

        # Redirect all other traffic to HTTPS
        location / {
            return 301 https://$host$request_uri;
        }
    }
    server {
        listen 443 ssl;
        server_name com619devops.uksouth.cloudapp.azure.com;

        ssl_certificate /etc/letsencrypt/live/com619devops.uksouth.cloudapp.azure.com/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/com619devops.uksouth.cloudapp.azure.com/privkey.pem;

        

        location / {
            proxy_pass http://devops:3000;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_cache_bypass $http_upgrade;
        }
    }
}