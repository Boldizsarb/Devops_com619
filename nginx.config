events {}

http {
    server {
        listen 443 ssl;
        server_name com619trial.uksouth.cloudapp.azure.com;

        ssl_certificate /etc/letsencrypt/live/com619trial.uksouth.cloudapp.azure.com/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/com619trial.uksouth.cloudapp.azure.com/privkey.pem;
        

        location / {
            proxy_pass http://devops:3000;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_cache_bypass $http_upgrade;
        }
    }
}
